#include <iostream>
#include<math.h>
using namespace std;

int main() {
	int t; cin >> t;
	while (t --) {
		long long int n; cin >> n;
		long long int power = log(n) / log(2);
		if (n == 1)
			cout << 1 << endl;
		else if (pow(2, power) == n)
			cout << (pow(2, power) - pow(2, power - 1)) << endl;
		else {
			long long int size1 = n - pow(2, power) + 1;
			long long int size2 = pow(2, power) - pow(2, power - 1);
			if (size1 > size2)
				cout << size1 << endl;
			else
				cout << size2 << endl;
		}
	}
	return 0;
}
